{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Ziggy",
  "colors": {
    "primary": "#6366F1",
    "light": "#818CF8",
    "dark": "#4F46E5"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": [
              "index",
              "quickstart",
              "connecting-jira"
            ]
          },
          {
            "group": "Features",
            "pages": [
              "features/issue-creation",
              "features/issue-search",
              "features/issue-assignment",
              "features/comments",
              "features/file-attachments",
              "features/done-notifications"
            ]
          },
          {
            "group": "Configuration",
            "pages": [
              "configuration/slash-commands",
              "configuration/project-defaults"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Website",
          "href": "https://ziggy.sh",
          "icon": "globe"
        },
        {
          "anchor": "Support",
          "href": "mailto:support@ziggy.sh",
          "icon": "envelope"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@ziggy.sh"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Add to Slack",
      "href": "https://ziggy.sh"
    }
  },
  "footer": {
    "socials": {
      "github": "https://github.com/ziggy-org"
    }
  }
}
